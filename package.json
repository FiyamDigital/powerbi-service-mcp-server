{
  "name": "powerbi-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server & HTTP API for Power BI REST APIs with PBIX/PBIR conversion support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "powerbi-mcp": "./bin/powerbi-mcp"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && chmod +x bin/powerbi-mcp",
    "start": "node dist/index.js",
    "start:api": "node dist/index.js --mode=api",
    "start:mcp": "node dist/index.js --mode=mcp",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "powerbi",
    "mcp",
    "mcp-server",
    "api",
    "pbix",
    "pbir",
    "pbip"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "form-data": "^4.0.5",
    "lodash-es": "^4.17.21",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
